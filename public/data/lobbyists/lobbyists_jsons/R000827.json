    "activitiesAndInterests": {
        "activity": {
            "code": "ACT_NETWORK_WITHOUT_LEGAL_FORM",
            "de": "Plattform, Netzwerk, Interessengemeinschaft, Denkfabrik, Initiative, Aktionsb\u00fcndnis o.\u00a0\u00e4.",
